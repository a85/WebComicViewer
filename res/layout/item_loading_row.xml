<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"	
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TextView android:id="@+id/item_loading_text"
				android:layout_width="wrap_content" android:layout_height="wrap_content"															
				android:text="Loading"
				android:maxLines="1"
				android:padding="10dp"/>
	<ProgressBar android:indeterminate="true"
		android:layout_width="18dp" android:layout_height="18dp"
		android:id="@+id/item_loading_progress" style="?android:attr/progressBarStyle"
		android:layout_marginTop="10dp"					
		android:layout_toRightOf="@id/item_loading_text"
		/>
</RelativeLayout>